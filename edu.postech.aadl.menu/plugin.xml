<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="HybridSynchAadlMenu.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="HybridSynchAadlMenu.commands.category"
            name="Constraints Check"
            id="HybridSynchAadlMenu.commands.constraintsCheck">
      </command>
      <command
            categoryId="HybridSynchAadlMenu.commands.category"
            name="Code Generation"
            id="HybridSynchAadlMenu.commands.codeGeneration">
      </command>
      <command
            categoryId="HybridSynchAadlMenu.commands.category"
            name="Symbolic Analysis"
            id="HybridSynchAadlMenu.commands.symbolicAnalysis">
      </command>
   </extension>
   
   
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="edu.postech.aadl.menu.ConstraintChecker"
            commandId="HybridSynchAadlMenu.commands.constraintsCheck">
			<enabledWhen>
			    <with variable="activeEditorId">
			        <equals value="edu.postech.aadl.xtext.propspec.PropSpec"/>
			    </with>
			</enabledWhen>
      </handler>
      <handler
            class="edu.postech.aadl.menu.CodeGeneration"
            commandId="HybridSynchAadlMenu.commands.codeGeneration">
			<enabledWhen>
			    <with variable="activeEditorId">
			        <equals value="edu.postech.aadl.xtext.propspec.PropSpec"/>
			    </with>
			</enabledWhen>
      </handler>
      <handler
            class="edu.postech.aadl.menu.SymbolicAnalysis"
            commandId="HybridSynchAadlMenu.commands.symbolicAnalysis">
			<enabledWhen>
			    <with variable="activeEditorId">
			        <equals value="edu.postech.aadl.xtext.propspec.PropSpec"/>
			    </with>
			</enabledWhen>
      </handler>
   </extension>
   
   
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="HybridSynchAadlMenu.commands.constraintsCheck"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+5">
      </key>
      <key
            commandId="HybridSynchAadlMenu.commands.codeGeneration"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6">
      </key>
      <key
            commandId="HybridSynchAadlMenu.commands.symbolicAnalysis"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+7">
      </key>
   </extension>
   
   
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="HybridSynchAadlMenu.menus.simpleMenu"
               label="HybridSynchAADL Verifier"
               mnemonic="M">
            <command
                  commandId="HybridSynchAadlMenu.commands.constraintsCheck"
                  id="HybridSynchAadlMenu.menus.constraintsCheck"
                  mnemonic="S">
            </command>
            <command
                  commandId="HybridSynchAadlMenu.commands.codeGeneration"
                  id="HybridSynchAadlMenu.menus.codeGeneration"
                  mnemonic="S">
            </command>
            <command
                  commandId="HybridSynchAadlMenu.commands.symbolicAnalysis"
                  id="HybridSynchAadlMenu.menus.symbolicAnalysis"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
